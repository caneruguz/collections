<div class="coll-add-choice">
    <div class="container">
        <h3> Add content </h3>
        <div class="add-panel m-t-lg p-md">
            {{#if (eq model.settings.collectionType 'Website')}}
                {{add-website model=model transition=(action "transition")}}
            {{else}}
                {{#if methodSelected}}
                        <div class="pointer p-md" {{action toggleProperty 'methodSelected'}}>
                            <button class="btn btn-link">
                                <i class="fa fa-angle-left"></i>
                                Back
                            </button>
                        </div>
                        {{#if (eq addMethod 'select')}}
                            {{add-node model=model type=type transition=(action "transition")}}
                        {{/if}}
                        {{#if (eq addMethod 'create')}}
                            {{preprint-form-author
                                contributors=contributors
                                parentContributors=parentContributors
                                node=node
                                isAdmin='true'
                                canEdit='true'
                                currentUser=user
                                addContributor=(action 'addContributor')
                                addContributors=(action 'addContributors')
                                findContributors=(action 'findContributors')
                                searchResults=searchResults
                                removeContributor=(action 'removeContributor')
                                editContributor=(action 'updateContributor')
                                reorderContributors=(action 'reorderContributors')
                                highlightSuccessOrFailure=(action 'highlightSuccessOrFailure')
                                parentNode=null
                                editMode='Submit'
                              }}


                          <div class="p-lg">This section is a placeholder for components that add their project types; i.e. "Add Preprint" </div>
                        {{/if}}
                {{else}}
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="p-md add-select-method" {{action 'updateProperty' 'addMethod' 'create'}}> Create a new {{model.settings.collectionType}} </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="p-md add-select-method" {{action 'updateProperty' 'addMethod' 'select'}}> Add existing {{model.settings.collectionType}} </div>
                        </div>
                    </div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>
